#include <iostream>
using namespace std;

int main() {
    long long t;
    cin >> t;

    for (int i = 0; i < t; i++) {
        long long n;
        cin >> n;

        if (n == 1) {
            cout << "0" << endl;
        } else if (n%2==0){
            cout << n/2-1<< endl;
        }
            else {
                cout<<n/2<<endl;
            }
    }
cin.get();
cin.get();
return 0;
}
