#include <iostream>
using namespace std;
int main() {
    string s;
    cin>>s;
    for(int i=0;i<s.length();i+=2)
        {
            for(int j=i+2;j<s.size();j+=2)
            {
                if(s[i]>s[j]){swap(s[i],s[j]);}
            }
        }
    
cout<<s;
cin.get();
cin.get();
return 0;    
}
